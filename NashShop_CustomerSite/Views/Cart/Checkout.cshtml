
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@model CheckoutVM
<div class="section-title">
    <h2>Billing Details</h2>
</div>
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Billing Details</h4>
            <form asp-action="Checkout" asp-controller="Cart" method="post">
                <div class="row">
                    <div class="col-lg-8 col-md-6">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Fist Name<span>*</span></p>
                                    <input asp-for="CheckoutModel.FullName" type="text">
                                </div>
                            </div>
                            
                        </div>
                      
                        <div class="checkout__input">
                            <p>Address<span>*</span></p>
                            <input asp-for="CheckoutModel.Address"  type="text" placeholder="Street Address" class="checkout__input__add">
                        </div>
                        
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Phone<span>*</span></p>
                                    <input asp-for="CheckoutModel.PhoneNumber"type="text">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input asp-for="CheckoutModel.Email" type="text">
                                </div>
                            </div>
                        </div>
                        
                     
                        <div class="checkout__input">
                            <p>Order notes<span>*</span></p>
                            <input asp-for="CheckoutModel.Note"type="text"
                                   placeholder="Notes about your order, e.g. special notes for delivery.">
                        </div>
                    </div>
                    @*order*@
                    <div class="col-lg-4 col-md-6">
                        <div class="checkout__order">
                            <h4>Your Order</h4>
                            <div class="checkout__order__products">Products <span>Total</span></div>
                            <ul>
                                @foreach (var item in Model.Cart.Items)
                                {
                                    <li>@item.Name <span>@Math.Round(item.Quantity * item.Price, 2)</span></li>
                                }

                            </ul>
                            <div class="checkout__order__subtotal">Total <span>$@Model.Cart.Total</span></div>

                            <button type="submit" class="site-btn">PLACE ORDER</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->
