@model NashShop_CustomerSite.Models.CartVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Shopping Cart</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @if (ViewBag.Msg != null)
                    {
                        <div id="msgAlert" class="alert alert-success" role="alert">
                            @ViewBag.Msg
                        </div>}
                </div>
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="cart-body">
                            @foreach (var item in @Model.Items)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="@(Configuration["BaseAddress"] + item.Image)" alt="">
                                        <h5>@item.Name</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        $@item.Price
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        @item.Quantity
                                    </td>
                                    <td class="shoping__cart__total">
                                        @Math.Round(item.Quantity * item.Price, 2)
                                    </td>
                                    <td>
                                        <button>
                                            <a asp-controller="Cart" asp-action="RemoveItem" asp-route-id="@item.ProductId">Remove</a>
                                        </button>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Total <span>@Model.Total</span></li>
                    </ul>
                    <a asp-controller="Cart" asp-action="Checkout" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Shoping Cart Section End -->